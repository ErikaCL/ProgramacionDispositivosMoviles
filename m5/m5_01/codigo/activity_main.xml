<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- TextView para mostrar el valor de Fibonacci -->
    <TextView
        android:id="@+id/textViewFibonacci"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="24sp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="32dp"
        android:layout_centerVertical="true" />

    <Button
        android:id="@+id/buttonAvanzar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Avanzar"
        android:layout_below="@id/textViewFibonacci"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="16dp" />

    <Button
        android:id="@+id/buttonRetroceder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Retroceder"
        android:layout_below="@id/textViewFibonacci"
        android:layout_alignParentStart="true"
        android:layout_marginTop="16dp" />

</LinearLayout>